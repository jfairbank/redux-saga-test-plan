{
  "name": "redux-saga-test-plan",
  "version": "0.2.0",
  "description": "Test helpers for redux-saga",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build": "babel src --out-dir lib",
    "clean": "rm -rf lib",
    "lint": "eslint {src,test}",
    "prepublish": "npm run clean && npm run build",
    "test": "ava",
    "tdd": "ava -w",
    "typecheck": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfairbank/redux-saga-test-plan.git"
  },
  "keywords": [
    "redux",
    "saga",
    "redux-saga",
    "test",
    "testing"
  ],
  "author": "Jeremy Fairbank <elpapapollo@gmail.com> (http://jeremyfairbank.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfairbank/redux-saga-test-plan/issues"
  },
  "homepage": "https://github.com/jfairbank/redux-saga-test-plan#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.8.0",
    "eslint-config-airbnb-base": "^1.0.4",
    "eslint-import-resolver-node": "^0.2.0",
    "eslint-plugin-import": "^1.6.0",
    "redux-saga": "^0.11.0"
  },
  "dependencies": {
    "lodash.isequal": "^4.1.4",
    "util-inspect": "^0.1.8"
  },
  "peerDependencies": {
    "redux-saga": "^0.10.0 || ^0.11.0"
  },
  "babel": {
    "presets": [
      "es2015-loose"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "settings": {
      "import/resolver": "node"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    },
    "globals": {
      "Generator": true,
      "IteratorResult": true
    }
  },
  "ava": {
    "require": "babel-register",
    "source": [
      "**/*.js",
      "!**/*.swp"
    ]
  }
}

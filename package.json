{
  "name": "redux-saga-test-plan",
  "version": "1.3.0",
  "description": "Test helpers for Redux Saga",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build": "babel src --out-dir lib",
    "clean": "rimraf lib",
    "lint": "eslint src/ test/",
    "prepublish": "npm run clean && npm run build",
    "test": "ava",
    "watch:test": "ava -w",
    "typecheck": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfairbank/redux-saga-test-plan.git"
  },
  "keywords": [
    "redux",
    "saga",
    "redux-saga",
    "test",
    "testing"
  ],
  "author": "Jeremy Fairbank <elpapapollo@gmail.com> (http://jeremyfairbank.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfairbank/redux-saga-test-plan/issues"
  },
  "homepage": "https://github.com/jfairbank/redux-saga-test-plan#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-register": "^6.7.2",
    "eslint": "^3.6.1",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-import-resolver-node": "^0.2.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^1.12.0",
    "flow-bin": "^0.33.0",
    "redux-saga": "^0.12.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "lodash.isequal": "^4.1.4",
    "object-assign": "^4.1.0",
    "util-inspect": "^0.1.8"
  },
  "peerDependencies": {
    "redux-saga": "^0.10.0 || ^0.11.0 || ^0.12.0"
  },
  "babel": {
    "presets": [
      "es2015-loose"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:flowtype/recommended"
    ],
    "settings": {
      "import/resolver": "node"
    },
    "rules": {
      "arrow-parens": 0,
      "no-plusplus": 0,
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ]
    },
    "plugins": [
      "flowtype"
    ]
  },
  "ava": {
    "require": "babel-register",
    "source": [
      "**/*.js",
      "!**/*.swp"
    ]
  }
}
